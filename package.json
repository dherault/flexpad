{
  "name": "flexpad",
  "version": "4.0.0",
  "description": "A CSS flexbox system",
  "main": "dist/src/index.js",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "author": "David HÃ©rault <dherault@gmail.com> (https://github.com/dherault)",
